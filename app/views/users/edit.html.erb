<h3>スケジュール編集</h3>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user, local: true do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
     <tr>
       <th><%= f.label :starting ,"開始日" %></th>
       <td><%= f.date_field :starting %></td>
     </tr>
     <tr>
       <th><%= f.label :ending ,"終了日" %></th>
       <td><%= f.date_field :ending %></td>
     </tr>
     <tr>
       <th><%= f.label :allday ,"終日" %></th>
       <td><%= f.check_box :allday, {}, 1, 0 %>
       <br>終日の場合はチェックを入れます</td>
     </tr>
     <tr>
       <th><%= f.label :memo ,"スケジュールメモ" %></th>
       <td><%= f.text_area :memo %></td>
     </tr>
   </table>

   <div>
     <ul>
       <li><%= f.submit "スケジュールの編集を完了する" %></li>
       <li><%= link_to "スケジュール一覧に戻る", :users %></li>
     </ul>
   </div>
<% end %>