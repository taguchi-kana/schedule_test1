<h3>スケジュール詳細</h3>

 <table>
   <tr>
     <th>タイトル</th>
     <td><%= @user.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @user.starting %></td>
   </tr>
   <tr>
     <th>終了日</th>
     <td><%= @user.ending %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td><% if @user.allday == true %>
              ○
         <% else @user.allday == false %>

         <% end %>
      </td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @user.memo %></td>
   </tr>
 </table>

 <div>
   <ul>
     <li><%= link_to "スケジュール一覧に戻る", :users %></li>
   </ul>
   <ul>
     <li><%= link_to "スケジュールを編集する", [:edit, @user] %></li>
   </ul>
   <ul>
     <li><%= link_to "スケジュールを削除", @users,method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
   </ul>
 </div>